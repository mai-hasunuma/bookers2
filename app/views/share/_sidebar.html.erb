<h1>User info</h1>
<table class="table">
	<thead>
		<tr>
      <th><%= attachment_image_tag(user, :profile_image, :fill, 60, 60, format: "jpg", fallback: "img/no_image.jpg") %></th>
      <th></th>
    </tr>
  </thead>
  <tr>
    <th>name</th>
    <th><%= user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
  </tr>
</table>
  <% if user.id == current_user.id %>
    <%= link_to edit_user_path(user) do %>
  <button type="button" class="btn btn-default btn-block" aria-label="Left Align"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
  </button>
  <% end %>
  <% end %>

<h2>Newbook</h2>
  <%= form_for(book) do |f| %>

<div class="form-group">
  <label>Title</label>
    <%= f.text_field :title, class:"form-control" %>
</div>

<div class="form-group">
  <label>Opinion</label>
  <%= f.text_area :body, class:"form-control" %>
</div>
  <%= f.submit 'Create Book', class:"btn btn-primary btn-block" %>
  <% end %>