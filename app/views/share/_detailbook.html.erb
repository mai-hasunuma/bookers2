<h1>Book detail</h1>
<table class="table table-hover">
  <tbody>
  <tr>
  	<td>
  		<%=link_to user_path(book.user) do %>
  		<%= attachment_image_tag(book.user, :profile_image, :fill, 60, 60, format: "jpeg", fallback: "img/no_image.jpg", size:'40x40') %><br>
  		<%= book.user.name %>
  		<% end %>
  		</td>
    <td><%= link_to "#{book.title}", book_path(book) %></td>
    <td><%= book.body %></td>
      <% if book.user_id == current_user.id %>
    <td><%= link_to edit_book_path do %>
      <button class="btn-sm  btn-success">edit</button>
      <% end %>
    </td>
    <td><%= link_to book_path(@book), method: :delete, data: {confirm: '本当に消しますか？'} do %>
      <button class="btn-sm  btn-danger">destroy</button>
      <% end %>
    </td>
      <% end %>
  </tr>
  </tbody>
</table>
