<h1>Books</h1>
<table class="table table-hover">
  <thead>
  	<tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
  	</tr>
  </thead>
    <% books.each do |book| %>
  <tbody>
  	<tr>
      <%= link_to books_path(book.user_id) do %>
      <td><%= attachment_image_tag(book.user, :profile_image, :fill, 40, 40, format:"jpeg", fallback: "img/no_image.jpg", size:'40x40') %></td>
      <% end %>
      <td><%= link_to "#{book.title}", book_path(book) %></td>
      <td><%= book.body %></td>
  	</tr>
  </tbody>
    <% end %>
</table>


