  <%= form_for(@user) do |f| %>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <p><%= @user.errors.count %>errors prohibited this obj from being saved:
    </p>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
      <%= message %>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container">
  <h1>User info</h1>
    <div class="form-body">
      <div class="field">
        <label class="control-label" for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputEmail" %>
      </div>

      <div class="field">
        <label class="control-label" for="inputPrifileImage">Image</label>
          <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
      </div>

      <div class="field">
  	    <label class="control-label" for="inputIntroduction">Introduction</label>
          <%= f.text_area :introduction, id:"inputIntroduction" %>
      </div>
      
          <%= f.submit "Update User" %>
    </div>
</div>
  <% end %>