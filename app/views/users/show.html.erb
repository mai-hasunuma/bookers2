<div class="container">
  <div class="row">
  <%= form_for(@book) do |f| %>
    <% if @book.errors.any? %>
    <div id="error_explanation">
    	<h2><%= @book.errors.count %>件のエラーが発生しました。</h2>
    	<ul>
    	  <% @book.errors.full_messages.each do |message| %>
    	  <li><%= message %></li>
    	  <% end %>
    	</ul>
    </div>
    <% end %>
    <% end %>
  </div>
    <div class="row">
    <div class="col-lg-3">
      <%= render 'share/sidebar', {user: @user, book: @book} %>
    </div>
    <div class="col-lg-9">
      <%= render 'share/indexbook', books: @books %>
    </div>
  </div>
</div>
