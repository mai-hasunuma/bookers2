<div class="container">
  <div class="row">
      <div class="col-xs-3">
      <%= render 'share/sidebar', {user: current_user, book: @book} %>
      </div>
    <div class="col-xs-9">
      <h1>Users</h1>
      <table class="table">
        <thead>
  	      <th>image</th>
  	      <th>name</th>
  	      <th></th>
        </thead>
          <% @users.each do |user| %>
        <tbody>
  	      <tr>
  	        <td><%= attachment_image_tag(user, :profile_image, :fill, 40, 40, format:"jpeg", fallback: "img/no_image.jpg", size:'40x40') %></td>
  	        <td><%= user.name %></td>
  	        <td><%= link_to "show", user_path(user) %></td>
  	        </tr>
        </tbody>
          <% end %>
      </table>
    </div>
  </div>
</div>
